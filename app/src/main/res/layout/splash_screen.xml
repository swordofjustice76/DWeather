<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colourSplashScreen">

    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colourBlack"
        android:textSize="68sp"
        android:text="DWeather"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:fontFamily="@font/theboldfont"/>

    <ImageView
        android:id="@+id/welcomeImageView"
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/welcomeTextView"
        android:layout_marginBottom="50sp"
        android:src="@drawable/sun"/>

</RelativeLayout>